function show_map($menu, $level) {
  $pages = find_pages( $menu);
  if (empty($pages))
    return;
  echo "<ul>";
  foreach ($pages as $page) {
    $link  = "<a href='/{$page['name']}'>{$page['name']}</a>";
    $title = _($page['Title'] ?? '');
    $type  = $page['Type'] ?? '';
    if ($type == "menu") {
      $link = "($link)";
    } elseif ($type == "xmenu") {
      $link = "[$link]";
    }
    echo "$level $link",($title ? " - $title" : ""),"<br>";
    show_map($page['name'], $level+1);
  }
  echo "</ul>";
}
