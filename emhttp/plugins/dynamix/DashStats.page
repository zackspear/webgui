function cpu_parse(msg) {
  var parse = {}, section = '';
  msg.split('\n').forEach(function(row) {
    if (row.substr(0,1) == '[') {
      section = row.substr(1,row.length-2);
      parse[section] = {};
    } else {
      var data = row.split('=');
      parse[section][data[0]] = data[1];
    }
  });
  return parse;
}

