#!/bin/bash
SERVICES="rpc nfsd ntpd nginx sshd avahidaemon samba"

if [[ -n $1 ]]; then
  [[ ! -e $1 ]] && touch $1 || exit 0
fi
logger -t network "reload services: ${1:-direct}"
for cmd in $SERVICES; do
  if /etc/rc.d/rc.$cmd update; then
    /etc/rc.d/rc.$cmd reload >/dev/null 2>&1
  fi
done
exit 0
