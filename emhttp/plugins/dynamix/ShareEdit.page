	$fsSize[''] = min(array_filter($small));

	foreach ($pools as $pool) {
		$fsSize[$pool] = _var($disks[$pool], 'fsSize', 0);
	}

	return json_encode($fsSize);
}

function fsFree() {
	global $disks, $pools;

